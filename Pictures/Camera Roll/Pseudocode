OPEN APP AS APP WITH ANY ORDER DRINK
OPEN APP "MENU" SEVERAL TYPES OF DRINK
OPEN APP "PRICE" AS DRINK PRICE
OPEN APP "VOUCHER" AS DISKON ORDER "GET DISKON" OR "CAN'T GET DISKON"
OPEN APP "PAYMENT" AS PAYMENT METHOD "OVO" AND "DANA"

IF OPEN APP "MENU" 
   OPEN APP "ORDER WITH ANY DRINK"
ELSE IF "PRICE 45000" 
   RESULT "PRICE - DISKON", "CAN'T GET DISKON"
ELSE IF USE "VOUCHER"
   RESULT "PRICE - DISKON"
ELSE IF "PAYMENT"
   RESULT WITH ANY PAYMENT METHOD "OVO", "DANA"
ELSE IF PAYMENT COMPLETED
ELSE :
CLOSE APP

END IF